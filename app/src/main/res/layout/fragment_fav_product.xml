<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.favorite.FavProductFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <ImageView
                android:id="@+id/heart_gif"
                android:layout_width="240dp"
                android:layout_height="240dp"/>

            <TextView
                android:id="@+id/product_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="마음에 드는 상품을 발견하면"/>

            <TextView
                android:id="@+id/product_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="하트를 눌러 찜해보세요."/>

            <Button
                android:id="@+id/fav_btn"
                android:layout_width="215dp"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="추천상품 보러가기"
                android:layout_marginTop="25dp"
                android:background="@drawable/login_btn_custom" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>